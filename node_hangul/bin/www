#!/usr/bin/env node

/**
 * Module dependencies.
 */

const app = require('../app');
const debug = require('debug')('node_db2:server');
const http = require('http');
const path = require('path');
const EventEmitter = require('events');
class eventEmitter extends EventEmitter {}
const sockApp = require('../socket/main');
const keyGen = require('../lib/keyGen');
const master = require('../lib/master');
const monitor = require('../lib/monitor.js');
const monitorUtil = require('../lib/monitorUtil');
const monitorUpdateLoop = require('../lib/monitorUpdateLoop');
const getMemInfo = require('../lib/getMemInfo');
const workerHandlers = require('../lib/workerListener');
const messageHandlers = require('../lib/workerHandler');

const workerModule = path.join(__dirname, '../', 'lib/worker.js');
const cacheModule = path.join(__dirname, '../', 'lib/cacheEngine.js');

// const childProcessMonitor = require('../lib/workerMonitor');



/**
 * Get port from environment and store in Express.
 */
async function main(){

  var port = normalizePort(global.PORT);
  app.set('port', port);

  /**
   * Create HTTP server.
   */

  var server = http.createServer(app);

  /*
  * Create Socket.io Server.
  */

  const io = require('socket.io')(server);

  // In the router, you can broadcast message using req.app.get('io').sockets.emit()
  // In the router, you can emit message to specific client using req.app.get('io').sockets.connected[socketid].emit()
  app.set('io',io); 
  app.set('sockets', io.sockets);
  const socketServer = sockApp.createServer(io);
  const defaultNotifcationOption = {
    enabled: true,
    bcastIO: io
  }

  // create log monitor (to broadcast serach and cache hit history using socket.io)
  const logMonitorOptions = {
    initialStatus: {
      log: []
    },
    notification: {
      ...defaultNotifcationOption, 
      bcastDefaultEventName:'logMonitor'
    }
  }

  const logMonitor = monitor.createMonitor(logMonitorOptions);
  global.logger.debug(`logMonitor initial status:`, logMonitor.getStatus()['log']);

  const masterMonitorOptions = {
    initialStatus: {
      lastIndexedDate : '',
      lastIndexedCount : 0,
      indexingStatus : 'NOT_INDEXED', // 'NOT_INDEXED', 'INDEXING', 'INDEX_DONE'
      pid : process.pid,
      mem : getMemInfo(),
      searching : 0
    },
    notification: {
      ...defaultNotifcationOption, 
      bcastDefaultEventName:'masterMonitor'
    } 
  }
  const masterMonitor = monitor.createMonitor(masterMonitorOptions);
  global.logger.debug(`masterMonitor initial status:`, masterMonitor.getStatus());

  app.set('masterMonitor', masterMonitor);
  app.set('logMonitor', logMonitor);

  // create uniq key generator to use assigning taskkey 
  const taskKey = keyGen.createKeyGenerator();
  // create task Results Map to hold child process's job result
  const taskResults = new Map();

  app.set('taskKey', taskKey);
  app.set('taskResults', taskResults);
 
  // create workers and cacheWorkers processes
  const startWorkerMessageKey = taskKey.getKey();
  taskResults.set(startWorkerMessageKey, []);
  const workers = master.createWorkers(global.NUMBER_OF_WORKER, workerModule, startWorkerMessageKey);
  // const cacheWorkers = master.createCacheWorkers(global.NUMBER_OF_CACHE, cacheModule);
  const cacheWorkers = master.createCacheWorkers(global.NUMBER_OF_CACHE, cacheModule).workers;
  app.set('workers', workers);
  app.set('cacheWorkers', cacheWorkers);

  // make monitor instance for worker to get/set monitor status and broadcast status
  const workersMonitor = workers.map(worker => monitorUtil.mkWorkerMonitor({pid:worker.pid, defaultNotifcationOption}));
  const cacheWorkersMonitor = cacheWorkers.map(worker => monitorUtil.mkCacheWorkerMonitor({pid:worker.pid, defaultNotifcationOption}));
  global.logger.debug(`workersMonitor initial status:`, workersMonitor[0].getStatus());
  app.set('workersMonitor', workersMonitor);
  app.set('cacheWorkersMonitor', cacheWorkersMonitor);

  // make handler for worker's messages (TIMEOUT or ALL-DONE handler)
  // when worker replied job result with message type, emit appropriate event (eg: search.success_messageKey) 
  const searchEvent = new eventEmitter();
  const clearEvent = new eventEmitter();
  const handlers = messageHandlers.initialize({searchEvent, clearEvent, masterMonitor});
  app.set('searchEvent', searchEvent);
  app.set('clearEvent', clearEvent);

  // attach eventListenr on workers (to process reply from workers)
  workers.map(worker => workerHandlers.attachMessageHanlder({worker, app, taskResults, handlers}));
  workers.map(worker => workerHandlers.attachExitHandler({worker, app, workerModule, handlers}));
  workers.map(worker => workerHandlers.attachErrorHandler(worker));

  socketServer.setMonitorStores({logMonitor, masterMonitor, workersMonitor, cacheWorkersMonitor});
  socketServer.startBroadcastLoop(global.MONITOR_BROADCAST_INTERVAL);
  monitorUpdateLoop.start.master(masterMonitor, global.MONITOR_BROADCAST_INTERVAL);
  monitorUpdateLoop.start.workers(app, global.MONITOR_BROADCAST_INTERVAL);
  monitorUpdateLoop.start.cacheWorkers(app, cacheWorkersMonitor, global.MONITOR_BROADCAST_INTERVAL);
  // master.initGatherMonitorLoop(app, global.MONITOR_BROADCAST_INTERVAL);
  // master.attachMessageEventHandler(app);

  /**
   * Listen on provided port, on all network interfaces.
   */

  server.listen(port);
  server.on('error', onError);
  server.on('listening', onListening);

  // set max request timeout
  // server.setTimeout(global.EXPRESS_REQ_TIMEOUT);
  /**
   * Normalize a port into a number, string, or false.
   */

  function normalizePort(val) {
    var port = parseInt(val, 10);

    if (isNaN(port)) {
      // named pipe
      return val;
    }

    if (port >= 0) {
      // port number
      return port;
    }

    return false;
  }

  /**
   * Event listener for HTTP server "error" event.
   */

  function onError(error) {
    if (error.syscall !== 'listen') {
      throw error;
    }

    var bind = typeof port === 'string'
      ? 'Pipe ' + port
      : 'Port ' + port;

    // handle specific listen errors with friendly messages
    switch (error.code) {
      case 'EACCES':
        console.error(bind + ' requires elevated privileges');
        process.exit(1);
        break;
      case 'EADDRINUSE':
        console.error(bind + ' is already in use');
        process.exit(1);
        break;
      default:
        throw error;
    }
  }

  /**
   * Event listener for HTTP server "listening" event.
   */

  function onListening() {
    var addr = server.address();
    var bind = typeof addr === 'string'
      ? 'pipe ' + addr
      : 'port ' + addr.port;
    debug('Listening on ' + bind);
  }
}

main();

